server:
  port: 8000

spring:
  application:
    name: RAGDemo
  
  # 数据库配置
  datasource:
    driver-class-name: org.postgresql.Driver
    url: jdbc:postgresql://${DB_HOST:localhost}:${DB_PORT:5432}/${DB_NAME:ragdemo}
    username: ${DB_USERNAME:postgres}
    password: ${DB_PASSWORD:password}
    hikari:
      maximum-pool-size: 10
      minimum-idle: 2
      idle-timeout: 300000
      connection-timeout: 30000
  jackson:
    serialization:
      WRITE_DATES_AS_TIMESTAMPS: false

  # JPA配置
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true

  # Redis配置
  data:
    redis:
      host: localhost
      port: 6379
      timeout: 2000ms
      jedis:
        pool:
          max-active: 8
          max-idle: 8
          min-idle: 0
          max-wait: -1ms
  
  # AI配置
  ai:
    openai:
      api-key: 
      base-url: https://api.csun.site
      chat:
        options:
          model: gpt-4o
          temperature: 0.7
  
  # 文件上传配置
  servlet:
    multipart:
      max-file-size: 10MB
      max-request-size: 10MB

# JWT配置
app:
  jwt:
    secret: 
    access-token-expiration: 86400  # 24小时
    refresh-token-expiration: 604800  # 7天

  # 文件上传目录配置
  file:
    upload-dir: uploads

# 日志配置
logging:
  level:
    com.firefly.ragdemo: DEBUG
    org.springframework.security: DEBUG
  pattern:
    console: "%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"

mybatis:
  mapper-locations: classpath:/mapper/**/*.xml
  type-aliases-package: com.firefly.ragdemo.entity
  configuration:
    map-underscore-to-camel-case: true
    default-fetch-size: 100
    default-statement-timeout: 30
    jdbc-type-for-null: 'NULL'
